<base:SignOutWindowBase x:Class="SportBet.AnalyticControls.AnalyticMainWindow"
        xmlns:base="clr-namespace:SportBet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Footer="clr-namespace:SportBet.CommonControls"
        Title="AnalyticMainWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Settings">
                <MenuItem Header="Change password" Click="ChangePassword_Click" />
            </MenuItem>
            <MenuItem Header="Sign out" Click="SignOut_Click" />
        </Menu>

        <Footer:Footer Grid.Row="2" x:Name="footer" />
    </Grid>
</base:SignOutWindowBase>
