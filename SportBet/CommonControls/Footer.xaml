<UserControl x:Class="SportBet.CommonControls.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300"
             Background="Silver">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Status: " />
        <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Name="statusText" />
        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Message: " />
        <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Name="messageText" />
    </Grid>
</UserControl>
