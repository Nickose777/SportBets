<base:SignOutWindowBase x:Class="SportBet.AdminControls.AdminMainWindow"
        xmlns:base="clr-namespace:SportBet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Footer="clr-namespace:SportBet.CommonControls"
        Title="AdminMainWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Create...">
                <MenuItem Header="Country" Click="CreateCountry_Click" />
                <MenuItem Header="Sport" Click="CreateSport_Click" />
                <MenuItem Header="Participant" Click="CreateParticipant_Click" />
                <MenuItem Header="Tournament" Click="CreateTournament_Click" />
            </MenuItem>
            <MenuItem Header="Manage...">
                <MenuItem Header="Countries" Click="ManageCountries_Click" />
                <MenuItem Header="Sports" Click="ManageSports_Click" />
                <MenuItem Header="Participants" Click="ManageParticipants_Click" />
                <MenuItem Header="Tournaments" Click="ManageTournaments_Click" />
            </MenuItem>
            <MenuItem Header="Settings">
                <MenuItem Header="Change password" Click="ChangePassword_Click" />
            </MenuItem>
            <MenuItem Header="Sign out" Click="SignOut_Click" />
        </Menu>

        <ListBox Grid.Row="1" Name="log" />
        
        <Footer:Footer Grid.Row="2" x:Name="footer" />
    </Grid>
</base:SignOutWindowBase>
